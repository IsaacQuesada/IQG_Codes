@page
@model Web.Pages.Aspectos.IndexModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Aspectos a Evaluar</div>
        <div class="masthead-heading text-uppercase">Listado de Aspectos a Evaluar</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">

        <div class="text-center mb-4">
            <a class="btn btn-success btn-lg" asp-page="./Agregar">
                <i class="bi bi-plus-square"></i> Agregar Aspecto a Evaluar
            </a>
        </div>

        @if (Model.Aspectos != null && Model.Aspectos.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Descripción</th>
                        <th>Activo</th>
                        <th>Categoría</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aspecto in Model.Aspectos)
                    {
                        <tr>
                            <td>@aspecto.Descripcion</td>
                            <td>@(aspecto.Activo ? "Sí" : "No")</td>
                            <td>@aspecto.NombreCategoria</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-page="./Editar" asp-route-id="@aspecto.IdAspecto">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>
                                <a class="btn btn-danger btn-sm" asp-page="./Eliminar" asp-route-id="@aspecto.IdAspecto">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No hay aspectos a evaluar registrados.
            </div>
        }

    </div>
</section>
