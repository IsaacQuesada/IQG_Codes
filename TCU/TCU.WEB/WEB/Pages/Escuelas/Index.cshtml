@page
@model Web.Pages.Escuelas.IndexModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Escuelas</div>
        <div class="masthead-heading text-uppercase">Listado de Escuelas</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Escuelas</h2>
            <h3 class="section-subheading text-muted">Administración de centros educativos</h3>
        </div>

        <div class="text-center mb-4">
            <a class="btn btn-success btn-lg" asp-page="./Agregar">
                <i class="bi bi-plus-square"></i> Agregar Escuela
            </a>
        </div>

        @if (Model.Escuelas != null && Model.Escuelas.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Centro Educativo</th>
                        <th>Director(a)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Escuelas)
                    {
                        <tr>
                            <td>@e.Codigo</td>
                            <td>@e.NombreCentroEducativo</td>
                            <td>@e.NombreDirector</td>
                            <td>
                                <a class="btn btn-warning btn-sm"
                                   asp-page="./Editar"
                                   asp-route-id="@e.IdEscuela">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a class="btn btn-danger btn-sm"
                                   asp-page="./Eliminar"
                                   asp-route-id="@e.IdEscuela">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>

                                <a class="btn btn-primary btn-sm"
                                   asp-page="/Informes/Index"
                                   asp-route-idEscuela="@e.IdEscuela">
                                    <i class="bi bi-folder2-open"></i> Ver Informes
                                </a>

                                <a class="btn btn-success btn-sm"
                                   asp-page="/Informes/Agregar"
                                   asp-route-idEscuela="@e.IdEscuela">
                                    <i class="bi bi-file-earmark-plus"></i> Crear Informe
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No hay escuelas registradas.
            </div>
        }
    </div>
</section>
