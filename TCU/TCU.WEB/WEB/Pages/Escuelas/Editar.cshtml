@page "{id:guid}"
@model Web.Pages.Escuelas.EditarModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Escuelas</div>
        <div class="masthead-heading text-uppercase">Editar Escuela</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Editar Escuela</h2>
            <h3 class="section-subheading text-muted">Actualice la información de la escuela</h3>
        </div>

        <div class="col-md-6 mx-auto">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Escuela.Codigo" class="form-label"></label>
                    <input asp-for="Escuela.Codigo" class="form-control" />
                    <span asp-validation-for="Escuela.Codigo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Escuela.NombreCentroEducativo" class="form-label"></label>
                    <input asp-for="Escuela.NombreCentroEducativo" class="form-control" />
                    <span asp-validation-for="Escuela.NombreCentroEducativo" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Escuela.NombreDirector" class="form-label"></label>
                    <input asp-for="Escuela.NombreDirector" class="form-control" />
                    <span asp-validation-for="Escuela.NombreDirector" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Escuela.IdEscuela" />

                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                </div>

                <div asp-validation-summary="All" class="text-danger mt-3"></div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
