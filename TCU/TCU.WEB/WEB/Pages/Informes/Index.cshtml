@page "{idEscuela:guid}"
@model Web.Pages.Informes.IndexModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Informes</div>
        <div class="masthead-heading text-uppercase">Informes para la Escuela</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">

        <h2 class="mb-4">Informes de la Escuela</h2>

        <a asp-page="/Escuelas/Index" class="btn btn-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Volver a Escuelas
        </a>

        @if (Model.Informes != null && Model.Informes.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Observación General</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var informe in Model.Informes)
                    {
                        <tr>
                            <td>@informe.Fecha.ToShortDateString()</td>
                            <td>@informe.ObservacionGeneral</td>
                            <td>
                                <a class="btn btn-primary btn-sm"
                                   asp-page="./Detalle"
                                   asp-route-idInforme="@informe.IdInforme">
                                    <i class="bi bi-eye"></i> Ver Detalle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No hay informes registrados para esta escuela.
            </div>
        }
    </div>
</section>
