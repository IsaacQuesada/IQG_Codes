@page "{id:guid}"
@model Web.Pages.Categorias.EliminarModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Categorías</div>
        <div class="masthead-heading text-uppercase">Eliminar Categoría</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Eliminar Categoría</h2>
            <h3 class="section-subheading text-muted">¿Está seguro de que desea eliminar esta categoría?</h3>
        </div>

        <div class="col-md-6 mx-auto">
            <form method="post">
                <dl class="row">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.Categoria.Nombre</dd>
                </dl>

                <input type="hidden" asp-for="Categoria.IdCategoria" />

                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</section>
