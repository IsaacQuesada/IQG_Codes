@page "{id:guid}"
@model Web.Pages.Categorias.EditarModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Categorías</div>
        <div class="masthead-heading text-uppercase">Editar Categoría</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Editar Categoría</h2>
            <h3 class="section-subheading text-muted">Actualice la información de la categoría</h3>
        </div>

        <div class="col-md-6 mx-auto">
            <form method="post">

                <div class="form-group mb-3">
                    <label asp-for="Categoria.Nombre" class="form-label"></label>
                    <input asp-for="Categoria.Nombre" class="form-control" />
                    <span asp-validation-for="Categoria.Nombre" class="text-danger"></span>
                </div>

                <!-- Campo oculto para mantener el Id de la categoría -->
                <input type="hidden" asp-for="Categoria.IdCategoria" />

                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                </div>

                <div asp-validation-summary="All" class="text-danger mt-3"></div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
