@page
@model Web.Pages.Categorias.IndexModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Categorías</div>
        <div class="masthead-heading text-uppercase">Listado de Categorías</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Categorías</h2>
            <h3 class="section-subheading text-muted">Administración de categorías de aspectos</h3>
        </div>

        <div class="text-center mb-4">
            <a class="btn btn-success btn-lg" asp-page="./Agregar">
                <i class="bi bi-plus-square"></i> Agregar Categoría
            </a>
        </div>

        @if (Model.Categorias != null && Model.Categorias.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Categorias)
                    {
                        <tr>
                            <td>@c.Nombre</td>
                            <td>
                                <a class="btn btn-warning btn-sm"
                                   asp-page="./Editar"
                                   asp-route-id="@c.IdCategoria">
                                    <i class="bi bi-pencil-square"></i> Editar
                                </a>

                                <a class="btn btn-danger btn-sm"
                                   asp-page="./Eliminar"
                                   asp-route-id="@c.IdCategoria">
                                    <i class="bi bi-trash"></i> Eliminar
                                </a>
                                <a class="btn btn-success btn-sm"
                                   asp-page="/Aspectos/Agregar"
                                   asp-route-idCategoria="@c.IdCategoria">
                                    <i class="bi bi-plus-square"></i> Agregar Aspecto a Evalaur
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No hay categorías registradas.
            </div>
        }
    </div>
</section>
