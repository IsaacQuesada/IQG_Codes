@page
@model Web.Pages.Categorias.AgregarModel

<header class="subhead">
    <div class="container">
        <div class="masthead-subheading">TCU — Sistema de Categorías</div>
        <div class="masthead-heading text-uppercase">Agregar Categoría</div>
    </div>
</header>

<section class="page-section bg-light">
    <div class="container">

        <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto">

            <form method="post">

                <div class="form-group mb-3">
                    <label asp-for="Categoria.Nombre"></label>
                    <input class="form-control" asp-for="Categoria.Nombre" />
                    <span class="text-danger" asp-validation-for="Categoria.Nombre"></span>
                </div>

                <div class="text-center mt-4">
                    <a class="btn btn-secondary" asp-page="./Index">Regresar</a>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>

            </form>

        </div>

    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
